/* pages/main/main.wxss */

.swiper{
  height: 100%;
  width:100%;
}

.imgswiper{
  width:100%;
  height:100%;
}

/**弹幕**/
.tm{
  opacity:0.5;
}
.message-box{
  position: fixed;
  bottom: 0rpx;
  right: 0rpx;
  z-index:99;
  width: 100%;
  height: 80rpx;
  background-color:black;
  display:flex;
  flex-direction: row;
  line-height: 80rpx;
  align-items: flex-start;
  padding:10rpx;
}

input{
  border:1rpx solid lightgrey;
  width:80%;
  height: 60rpx;
  margin-left: 20rpx;
  padding:10rpx;
  border-radius: 10rpx;
  color:white;
}

.btn-send{
  color:white;
  width:20%;
  text-align: center;
  border:1px solid lightgrey;
  border-radius: 20rpx;
  margin-left:10rpx;
}
.btn-send:active{
  background-color:gray;
}

.message-board{
  position: fixed;
  bottom:100rpx;
  right: 0rpx;
  width: 100%;
  height: 300rpx;
  background-color:rgba(0, 0, 0, 0.178);
}

.msg-item{
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: flex-start;
}

.msg-item .img{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-left:20rpx;
}
.msg-item .msg{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  margin-left:20rpx;
  color:white;
}